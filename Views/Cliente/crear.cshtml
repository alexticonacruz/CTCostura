@{
}
@model Cliente
<div class="container">
    <h1>Formulario Cliente</h1>
    <form asp-action="crear" method="post">
        <div class="form-group">
            <label asp-for="name" class="control-label">Nombre</label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="nameCompany" class="control-label">Nombre Compañía</label>
            <input asp-for="nameCompany" class="form-control" />
            <span asp-validation-for="nameCompany" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="number" class="control-label">Número</label>
            <input asp-for="number" class="form-control" />
            <span asp-validation-for="number" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="direccion" class="control-label">Dirección</label>
            <input asp-for="direccion" class="form-control" />
            <span asp-validation-for="direccion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </form>
</div>