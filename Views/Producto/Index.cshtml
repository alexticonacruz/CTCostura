<div id="contenedorRopa">
    @foreach (var stock in Model.stocks)
    {
        <div class="cRopa">
            <div class="imageRopa">
                <picture class="cPicture">
                    <img src="~/imagenes/@stock.Producto.urlImagen" alt="">
                </picture>
            </div>
            <div class="textoRopa">
                <h2 class="nameRopa">@stock.Producto.modelo</h2>
                <div class="btnDetalleRopa">
                    <p class="precioRopa">Precio : 45bs</p>
                    <p class="btnIconRopa">
                        <a asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-productoId="@stock.stockId">
                            <span class="material-symbols-rounded CBtn">
                                shopping_cart
                            </span>
                        </a>
                        <a href="#">
                            <span class="material-symbols-rounded DBtn">
                                north_east
                            </span>
                        </a>
                    </p>
                </div>
            </div>
        </div>
     }
    

</div>
@foreach (var stock in Model.stocks)
{
    <div class="tarjeta">
        <p class="precio">@stock.precioMenor bs.</p>
        <div class="icon">
            <a href="">@stock.Producto.talla</a>
            <a href=""><i class="bi bi-cart3"></i></a>
            <a href=""><i class="bi bi-share"></i></a>
        </div>
        <picture>
            <img class="foto" src="~/imagenes/@stock.Producto.urlImagen" alt="">
        </picture>
        <div class="texto">
            <h4>@stock.Producto.modelo</h4>
            <p class="truncate-text">
                Este es un texto que se mostrará en un máximo de 2 líneas antes de truncar el contenido si es
                demasiado largo.
            </p>
            <div class="botones">
                <a asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-productoId="@stock.stockId"
                   class="aComprar"><i class="bi bi-cash-coin"></i> Comprar</a>

                <a asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-productoId="@stock.stockId"
                   class="aCarrito"><i class="bi bi-cart3"></i> Agregar</a>

            </div>
        </div>
    </div>
    

    
    
}
