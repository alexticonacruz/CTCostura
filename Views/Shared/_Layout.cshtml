<body>
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
        var isHome = (controller == "Home" && action == "Index") ? "home-header" : "";
    }
    
    <header class="@isHome" id="headerInicio">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categoria" asp-action="Index">Categoria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Paypal" asp-action="Index">Paypal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Index">Producto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="stock" asp-action="Index">Stock</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Catalogo">Catalogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Estadistica" asp-action="Index">Estadisticas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="stock" asp-action="ultimos">ultimo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pedido" asp-action="Index">Pedido</a>
                        </li>
                        
                        
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>

        <div id="fondoPortada">
            <picture id="c1">
                <img src="~/im/jackob copia.png" alt="">
                <h1 id="textoHeader">
                    Estilo y confort
                    <br />
                    Poleras , Camisas, Soleras
                    <br />
                    Vistete con originalidad
                    <br />
                    <button class="btn btn-primary">Guardar</button>
                </h1>
            </picture>
        </div>
    </header>
   
    <div class="ct1">
        <div class="dashboard">
            <a asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a>
            <a><i class="bi bi-journal-bookmark"></i> Contactos</a>
            <a asp-area="" asp-controller="Estadistica" asp-action="Index"><i class="bi bi-graph-up-arrow"></i> Ingresos</a>
            <a><i class="bi bi-graph-down-arrow"></i> Egresos</a>
            <a asp-area="" asp-controller="stock" asp-action="Index"><i class="bi bi-graph-down-arrow"></i> Stock</a>
            <a asp-area="" asp-controller="Cliente" asp-action="crear"><i class="bi bi-graph-down-arrow"></i> Cliente</a>
            <a asp-area="" asp-controller="pagoPedido" asp-action="crear"><i class="bi bi-graph-down-arrow"></i> Pago Pedido</a>
            <a asp-area="" asp-controller="Pedido" asp-action="Index"><i class="bi bi-graph-down-arrow"></i> Agendar Pedido</a>

           
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer>Derechos Reservados</footer>
