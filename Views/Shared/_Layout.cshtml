            height:100%;
            transform:matrix(1,2,3,4,5,6);
            transform: rotate(-55deg);
            top:0;
            right:-40%;
        }


        /* Fondo transparente para el header en el Home/Index */
        #headerInicio.home-header  {
            background-color: rgba(137, 43, 226, 0.757) !important;
            width:100% !important ;
            height:100vh;
        }

        #headerInicio.home-header .navbar {
            background-color: rgba(137, 43, 226, 0.757) !important;

        }


                #headerInicio.home-header a.navbar-brand {
                color: aliceblue;
            }

                #headerInicio.home-header a.nav-link.text-dark {
                color: aliceblue !important;
                padding: 15px;
                border-radius: 15px;
                &:hover

        {
            background-color: indigo;
        }

        }
                /* Fondo blanco para el header en otras páginas */
