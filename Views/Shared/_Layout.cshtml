                width: 100% !important;
                & #fondoPortada{
                    display:none;
                }
                
        }

        #headerInicio:not(.home-header) .navbar{
            background-color: rgba(137, 43, 226, 0.757) !important;
        }
        
        #headerInicio:not(.home-header)  a.navbar-brand {
            color: aliceblue;
        }

        #headerInicio:not(.home-header)  a.nav-link.text-dark {
            color: aliceblue !important;
            padding: 15px;
            border-radius: 15px;
            &:hover

        {
            background-color: indigo;
        }

        }
        header{
            width:100%;
            position:relative;
            overflow: hidden;
        }

        #fondoPortada {
            width: 100%;
            height: 100vh;
        }
        #c1{
            display:flex;
        }
        #fondoPortada img {
            width: 650px;
            aspect-ratio: 7/8;
            filter: drop-shadow(20px 10px 20px rgba(0, 0, 0, 0.712));
        }

        #textoHeader {
            /*top: 30%;
